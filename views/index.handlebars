<div class="container">
    <div class="row" id="top">
        <div class="col-12 text-center">
            <h1>Eat Da Burger</h1>
        </div>
    </div>
<br>
    <div class="row">
        <div class="col-3 text-center" id="enterSide">
            {{#each burger_data}}
                {{#unless this.devoured}}
        </div>
        <div class="col-3 text-center">
            <pre>{{this.id}}, {{this.burger_name}}</pre>
        </div>
        <div class="col-6 text-center" id="devourSide">
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">DEVOUR</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}
    </div>
</div>
